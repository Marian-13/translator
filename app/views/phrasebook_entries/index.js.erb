(function() {
  let phrasebookEntries = $("#phrasebook-entries");

  <% @phrasebook_entries.reverse_each do |phrasebook_entry| %>
    phrasebookEntries.append(
      "<%= escape_javascript(render partial: 'phrasebook_entry', locals: { phrasebook_entry: phrasebook_entry })%>"
    );
  <% end %>

  let offset = phrasebookEntries.data("offset");
  phrasebookEntries.data("offset", offset + <%= escape_javascript(@phrasebook_entries.size.to_s) %>);
})()
